#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
	int a[5], b[5], c[5];
	cout << "Enter value of 1st array";
	for (int i = 0; i < 5; i++)
	{
		cin >> a[i];
	}
		cout << "Enter value of 2nd array";
		for (int j = 0; j < 5; j++)
		{
			cin >> b[j];
		}
		for (int k = 0; k < 5; k++)
		{
			c[k] = a[k] + b[k];

			cout << "The value of 3rd array is:" << c[k] << endl;
		}
	_getch();
	return 0;
}
